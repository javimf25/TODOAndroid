<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llistardomicilislay"
    android:background="#ffffff">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Llista de domicilis registrats"
            app:layout_constraintBottom_toBottomOf="@+id/llistardomicilislay"
            app:layout_constraintEnd_toEndOf="@+id/llistardomicilislay"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="@+id/llistardomicilislay"
            app:layout_constraintTop_toTopOf="@+id/llistardomicilislay"
            app:layout_constraintVertical_bias="0.173" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/llistadomicilis"
            android:layout_width="368dp"
            android:layout_height="359dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/llistardomicilislay"
            app:layout_constraintEnd_toEndOf="@+id/llistardomicilislay"
            app:layout_constraintStart_toStartOf="@+id/llistardomicilislay"
            app:layout_constraintTop_toTopOf="@+id/llistardomicilislay" />

        <Button
            android:id="@+id/afegirDomicili"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="@+id/llistardomicilislay"
            app:layout_constraintEnd_toEndOf="@+id/llistardomicilislay"
            app:layout_constraintHorizontal_bias="0.962"
            app:layout_constraintStart_toStartOf="@+id/llistardomicilislay"
            app:layout_constraintTop_toTopOf="@+id/llistardomicilislay"
            app:layout_constraintVertical_bias="0.168" />



</android.support.constraint.ConstraintLayout>